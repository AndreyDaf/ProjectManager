<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Wao_Comments>
            <version>0.1.0</version>
        </Wao_Comments>
    </modules>
    
    <admin>
        <routers> 
            <comments>
                <use>admin</use>
                <args>
                    <module>Wao_Comments</module>
                    <frontName>comments</frontName>
                </args>
            </comments>
        </routers>
    </admin>
    
<adminhtml>
        <layout>
            <updates>
                <comments>
                    <file>comments.xml</file>
                </comments>
            </updates>
        </layout>
</adminhtml>
    
    <global>
        <models>
            <comments>
                <class>Wao_Comments_Model</class>
                <resourceModel>comments_mysql4</resourceModel>
            </comments>
            <comments_mysql4>
                <class>Wao_Comments_Model_Mysql4</class>
                <entities>
                    <post>
                        <table>wao_comments</table>
                    </post>
                </entities>
            </comments_mysql4>
        </models>
        
        <resources>
            <comments_setup>
                <setup>
                    <module>Wao_Comments</module>
                </setup>                
                <connection>
                    <use>core_setup</use>
                </connection>
            </comments_setup>
            
            <comments_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </comments_write>
            
            <comments_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </comments_read>
        </resources>
        
        <blocks>
            <comments>
                <class>Wao_Comments_Block</class>
            </comments>
        </blocks>
        
        <helpers>
            <comments>
                <class>Wao_Comments_Helper</class>
            </comments>
        </helpers>
    </global>
</config>